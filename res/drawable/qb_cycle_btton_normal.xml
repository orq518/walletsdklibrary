<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 填充的颜色 -->

    <solid android:color="@color/qb_white" />

    <!-- 设置按钮的四个角为弧形 -->


    <!-- android:radius 弧形的半径 -->

    <corners
        android:topRightRadius="@dimen/qb_btn_radis"
        android:topLeftRadius="@dimen/qb_btn_radis"
        android:bottomLeftRadius="@dimen/qb_btn_radis"
        android:bottomRightRadius="@dimen/qb_btn_radis" />

    <!-- padding: Button 里面的文字与Button边界的间隔 -->
    <stroke
        android:width="2dp"
        android:color="@color/qb_red_invest" />

    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />

</shape>