<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qb_wallet_nodata_bg" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:drawablePadding="20dp"
        android:drawableTop="@drawable/qb_wallet_nodata_middle"
        android:gravity="center_horizontal"
        android:textColor="@color/qb_dark_gray"
        android:text="抱歉，服务器开小差了，请点击下拉刷新"
        android:textSize="15sp" />

    <Button
        android:id="@+id/bt_refresh"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        style="@style/rqb_btn_orange_style"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:text="刷新" />
 <include
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        layout="@layout/qb_footer" />
</RelativeLayout>