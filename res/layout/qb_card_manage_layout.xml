<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/qb_bank_bg"
              android:orientation="vertical">
    <com.ucfwallet.plugin.views.UcfTitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/debit_card"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/qb_round_corner_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone">
            <ImageView
                android:id="@+id/bank_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/qb_bg_default"/>

            <ImageView
                android:id="@+id/bank_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/qb_default_bank"/>
            <RelativeLayout android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/bank_icon">
                <TextView
                    android:id="@+id/bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="银行名"
                    android:textColor="#434343"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/card_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/bank_name"
                    android:text="借记卡"
                    android:textColor="@color/qb_gray3"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/card_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bank_name"
                    android:layout_marginTop="20dp"
                    android:text="0000 ***** **** 0000"
                    android:textColor="@color/qb_gray3"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/right_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@id/card_num"
                    android:drawablePadding="5dp"
                    android:layout_below="@id/bank_name"
                    android:drawableRight="@drawable/qb_wallet_trade_nopay"
                    android:textColor="@color/qb_black"/>
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/credit_card"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/qb_round_corner_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone">
            <ImageView
                android:id="@+id/bank_bg_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/qb_bg_default"/>
            <ImageView
                android:id="@+id/bank_icon_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/qb_default_bank"/>
            <RelativeLayout android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/bank_icon_1">
                <TextView
                    android:id="@+id/bank_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="银行名"
                    android:textColor="#434343"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/card_type_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/bank_name_1"
                    android:text="信用卡"
                    android:textColor="@color/qb_gray3"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/card_num_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bank_name_1"
                    android:layout_marginTop="20dp"
                    android:text="0000 ***** **** 0000"
                    android:textColor="@color/qb_gray3"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/right_bt_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/bank_name_1"
                    android:drawablePadding="5dp"
                    android:layout_alignBaseline="@id/card_num_1"
                    android:drawableRight="@drawable/qb_wallet_trade_nopay"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:text="解绑"
                    android:textColor="@color/qb_link_blue"
                    android:textSize="16sp"/>
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout android:id="@+id/nocard_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="60dp"
                        android:background="@drawable/qb_round_corner_bg"
                        android:paddingBottom="20dp"
                        android:paddingLeft="40dp"
                        android:paddingRight="40dp"
                        android:paddingTop="20dp"
                        android:visibility="gone">

            <ImageView
                android:id="@+id/nocard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/qb_add_card"/>
            <TextView
                android:id="@+id/tv_nocard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nocard"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="您尚未绑定银行卡"
                android:textColor="@color/qb_gray3"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_quick_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_nocard"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:text="点击添加"
                android:textColor="@color/qb_link_blue"
                android:textSize="16sp"/>

        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout android:id="@+id/no_credit_card_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/qb_round_corner_bg"
                    android:clickable="true"
                    android:visibility="gone" >

        <ImageView
            android:id="@+id/nocard1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/qb_add_card"/>
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/nocard1"
                      android:gravity="center"
                      android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_nocard1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="暂未绑定信用卡，"
                android:textColor="@color/qb_gray3"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="点击添加"
                android:textColor="@color/qb_link_blue"
                android:textSize="18sp"/>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>