<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:clickable="true"
     android:background="@drawable/qb_wxwallet_addcard_white_bg"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp" >

        <LinearLayout
            android:id="@+id/card_add_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/im_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:src="@drawable/qb_wallet_plus" />

            <TextView
                android:id="@+id/tv_add_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加银行卡"
                android:textColor="@color/qb_btn_blue_normal"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_card_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_add_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="此卡将作为您唯一的消费卡"
            android:textColor="@color/qb_gray3"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>