<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
>
    <View android:layout_width="15dp"
          android:layout_height="15dp"
          android:layout_gravity="right"
          android:layout_marginBottom="-3dp"
          android:layout_marginRight="20dp"
          android:background="@drawable/qb_triangle_icon"/>
    <ListView
        android:id="@+id/qb_menu_listview"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:background="@color/qb_bao_nocolor"
        android:clickable="true"
        android:divider="@color/qb_board_gray"
        android:dividerHeight="1px"
        android:listSelector="@color/qb_bao_nocolor"
        android:scrollbars="none">
    </ListView>
</LinearLayout>
