<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/qb_white"
    android:clickable="false"
    android:orientation="vertical"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/qb_white"
        android:clickable="false"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="vertical">
    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/im_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/qb_erroe_pic"/>
        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/qb_half_red_bg"
            android:lines="1"
            android:text="仅剩0件"
            android:paddingLeft="3dp"
            android:layout_alignTop="@id/im_icon"
            android:layout_alignLeft="@id/im_icon"
            android:paddingRight="4dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:textColor="@color/qb_white"
            android:textSize="11sp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:lines="1"
        android:ellipsize="end"
        android:text="四件套"
        android:textColor="@color/qb_color_text1"
        android:textSize="@dimen/qb_text_size"/>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_curprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginRight="1dp"
            android:lines="1"
            android:text="￥0.00"
            android:textColor="@color/qb_orange_color"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_oldprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom"
            android:lines="1"
            android:text="￥0.00"
            android:textColor="@color/qb_text_gray"
            android:textSize="12sp"/>

    </LinearLayout>
    </LinearLayout>
</LinearLayout>

