<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/qb_white">
    <ImageView
        android:id="@+id/ic_top"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@drawable/qb_erroe_pic"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ic_top"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="-2dp"
        android:src="@drawable/qb_triangle_icon"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/shop_recyclerview"
        android:layout_width="match_parent"
        android:layout_below="@id/ic_top"
        android:layout_height="wrap_content"
        android:background="@color/qb_board_gray"
        android:scrollbars="none"/>
</RelativeLayout>