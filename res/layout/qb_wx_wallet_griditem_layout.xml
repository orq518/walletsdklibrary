                android:text="--"
                android:textColor="@color/qb_gray3"
                android:textSize="13sp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/sub_icon1"
            android:layout_width="@dimen/qb_stub_image_size"
            android:layout_height="@dimen/qb_stub_image_size"
            android:background="@color/qb_bao_nocolor"
            android:src="@drawable/qb_erroe_pic"/>
    </RelativeLayout>
    <View
        android:layout_width="@dimen/qb_border"
        android:layout_height="fill_parent"
        android:background="@color/qb_bao_nocolor"/>
    <RelativeLayout
        android:id="@+id/item_layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_weight="1">
        <LinearLayout
