<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/qb_main_bg_color"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/qb_border"
              android:weightSum="3">
    <RelativeLayout
        android:id="@+id/item_layout0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/qb_wxwallet_item_white_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im_icon0"
                android:layout_width="@dimen/qb_image_size"
                android:layout_height="@dimen/qb_image_size"
                android:layout_marginBottom="@dimen/qb_margin"
                android:layout_marginTop="@dimen/qb_margin_top"
                android:src="@drawable/qb_erroe_pic"/>

            <TextView
                android:id="@+id/tv_name0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:singleLine="true"
                android:text="--"
                android:textColor="@color/qb_dark_gray"
                android:textSize="@dimen/qb_text_size"/>

            <TextView
                android:id="@+id/tv_expand0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/qb_border"
                android:singleLine="true"
                android:text="--"
                android:textColor="@color/qb_gray3"
                android:textSize="13sp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/sub_icon0"
            android:layout_width="@dimen/qb_stub_image_size"
            android:layout_height="@dimen/qb_stub_image_size"
            android:background="@color/qb_bao_nocolor"
            android:src="@drawable/qb_erroe_pic"/>
    </RelativeLayout>


    <View
        android:layout_width="@dimen/qb_border"
        android:layout_height="fill_parent"
        android:background="@color/qb_bao_nocolor"/>
    <RelativeLayout
        android:id="@+id/item_layout1"
